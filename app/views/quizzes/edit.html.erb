<%= box_title %>
Editing quiz <span style="font-size:10px;"><%= link_to 'back to list', quizzes_path %></span>
<%= box_content %>
in category:<%= @quiz.category.path_without_root %>
<%= quiz_field_editor(@quiz, "label", "Quiz's label", :size => 60 ) %>
<%= quiz_field_editor(@quiz, "extract", "Quiz's description", :cols => 60, :rows => 4 ) %>
<%= render(:partial => "/main/media_editor", :locals => { :title => "media", :ar_object => @quiz }) %>
<%= render(:partial => "/main/image_editor", :locals => { :title => "background image", :ar_object => @quiz }) %>


<% products = @quiz.products %>
<% questions = @quiz.questions %>
<form style="margin-top:20px;">
<table width="100%" border=1>
	<tr><th><%= products.size %> Products</th><th><%= questions.size %> Questions</th></tr>
	<tr><td colspan="2" align="center"><%= submit_tag("Update Products & Question availables for this quiz") %></td></tr>
	<tr>
		<td valign="top">
			<% for product in products %>
				<div style="margin:4px;"><%= check_box_tag(:product) %> <%= product.label %></div>
			<% end %>
		</td>
		<td valign="top">
			<% for question in questions %>
				<div style="margin:4px;"><%= check_box_tag(:product) %> <%= question.label %></div>
			<% end %>
		</td>
	</tr>
</table>
</form>
<%= box_end %>




