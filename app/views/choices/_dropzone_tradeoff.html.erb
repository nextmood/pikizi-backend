<ul id="dropzone_choice_<%= choice.id %>" class="dropzone_list" style="min-height:80px;" >
	<% if choice.tips.size > 0 %>
		<%= render(:partial => "/main/thumbnail", 
			:locals => {:ar_object => choice.product, :container_tag => "li", :corner_link => "/choices/tradeoff_product_remove/#{choice.id}" }) %>
	<% else %>
	drag and drop a product from your album
	<% end %>
</ul>

<%= drop_receiving_element("dropzone_choice_#{choice.id}", # The id of the drop zone
  :accept => "object_album", 
  :url    => { :controller => "choices", :action => "tradeoff_product_add", :choice_id => choice.id  },  # The action to call
  #:url    => "/recommend_product/#{choice_id}/",
  :with   => "'dom_id=' + (element.id)"  # The query string parameters

)%>
