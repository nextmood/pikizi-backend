<!-- title  + header -->
<%= render(:partial => "/questions/create_tip", 
		:locals => {:category => question.category, :question => question })%>

<!-- edit fields of question -- >
<div class="question_box">	
<% product = question.feature_value.product %>
<% feature = question.feature_value.feature %>
<div style="margin-bottom:0px;">
	Product: <b><%= product.label %> <%= feature.label %></b> if one answer yes to:
</div>
<%= ar_field_editor(question, "label", "Tip", :size => 60 ) %>
<%= ar_field_editor(question, "tag_list", "Tip's tags", :size => 60 ) %>
<%= ar_field_editor(question, "extract", "Tip's description", :cols => 60, :rows => 4 ) %>

</div>
<% for choice_tip in question.choices %>
	<div class="choice_box">
		
		<!-- choice's label -->
		<%= ar_field_editor(choice_tip, "label", "<b>Choice</b>'s label", :size => 60 ) %>
		
		<!-- choice's background description -->
		<%= ar_field_editor(choice_tip, "extract", "Choice's description", :cols => 60, :rows => 4 ) %>
		
		<!-- choice's background media -->
		<%= render(:partial => "/main/media_editor", :locals => { :title => "media", :ar_object => choice_tip }) %>
		
		<!-- choice's background image -->
		<%= render(:partial => "/main/image_editor", :locals => { :title => "thumbnail image", :ar_object => choice_tip }) %>
		

	</div>
<% end %>


<%= box_end %>
