<!-- title -->
<%= render(:partial => "/questions/choice_title", 
		:locals => {:label => "Poll Question", :category => question.category, :question => question })%>


<!-- edit fields of question -- >
<div class="question_box">
	<%= ar_field_editor(question, "label", "<b>Question</b>'s label", :size => 60 ) %>
	<%= ar_field_editor(question, "tags", "Question's tags", :size => 60 ) %>
	<%= ar_field_editor(question, "extract", "Question's description", :cols => 60, :rows => 4 ) %>
	<%= render(:partial => "/main/media_editor", :locals => { :title => "media", :ar_object => question }) %>
	<%= render(:partial => "/main/image_editor", :locals => { :title => "background image", :ar_object => question }) %>
	<%= render(:partial => "/questions/choice_multiple_add", :locals => { :question => question }) %>
	
</div>


<% for choice_poll in question.choices %>
	<div class="choice_box">
		
		<!-- choice's label -->
		<%= ar_field_editor(choice_poll, "label", "<b>Choice</b>'s label", :size => 60 ) %>
		
		<!-- choice's background description -->
		<%= ar_field_editor(choice_poll, "extract", "Choice's description", :cols => 60, :rows => 4 ) %>
		
		<!-- choice's background media -->
		<%= render(:partial => "/main/media_editor", :locals => { :title => "media", :ar_object => choice_poll }) %>
		
		<!-- choice's background image -->
		<%= render(:partial => "/main/image_editor", :locals => { :title => "thumbnail image", :ar_object => choice_poll }) %>
		
		<!-- delete this choice-->
		<%= link_to("delete this choice", "/remove_choice/#{choice_poll.id}") %>
				
	</div>
<% end %>



